{
  "name": "simple-slack-notify",
  "version": "1.1.2",
  "description": "Slack notification action that just works",
  "author": "Adam K Dean <adamkdean@googlemail.com>",
  "license": "MIT",
  "keywords": [
    "slack",
    "notify",
    "notification",
    "github action",
    "action"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adamkdean/simple-slack-notify.git"
  },
  "main": "dist/index.js",
  "scripts": {
    "all": "npm run lint && npm run format-check && npm run build",
    "build": "ncc build src/index.js",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "format-check": "prettier --check src/**/*.js"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "@slack/webhook": "^5.0.3"
  },
  "devDependencies": {
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.5.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "prettier": "^2.0.5"
  }
}
